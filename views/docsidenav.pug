extends doc.pug

block head_added
  link(href="/css/kstyles.css" rel="stylesheet")
  script(src = "/vendor/js/jump.js")
block content
  - var activelink = active.substr(1).replace('/',' ')
  div(class="main "+activelink)
    .container
      h1 #{pagetitle}

    #main.container.container-subnav
      div(class="grid grid--full")
        div(class="grid__cell u-1/4--larger")
          ul(class="grid grid--full subnav sticky") 
            each item in subnav
              if item[0] == title 
                li(class="grid__cell active-sub1")
                  h2 #{item[0]}
                  ul(class="grid grid--full")
                    each navItem in inPageNav              
                      - var link = '#'+ navItem
                      - var linkName = navItem.replace(/-/g,' ').replace(/\b\w/g, function(l){ return l.toUpperCase() })                      
                      li(class="grid__cell u-1/2 u-1/3--medium u-1/4--large u-1/1--larger sub2")
                        a(href=link) #{linkName}           
              else   
                li(class="grid__cell u-1/2 u-1/3--medium u-1/4--large u-1/1--larger sub1") 
                  a(href=item[1]) 
                    strong #{item[0]}               
        div(class="grid__cell u-3/4--larger")
          .inner!= content

block footer
  include partials/footer.pug
block scripts  
  script(src = "/js/scripts.js")
  script(src = "/js/burgerNav.js")
